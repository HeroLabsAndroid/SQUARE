<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="10dp"
    tools:context="${relativePackage}.${activityClass}"
    android:id="@+id/rootLayout">

    <ImageButton
        android:id="@+id/playBtn"
        style="@style/AppTheme"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/playbtnstates"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/welcomeTextView"
        android:layout_centerHorizontal="true"
        android:onClick="onClickPlay"/>

    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Welcome"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:layout_marginTop="106dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="HIGHSCORE"
        android:id="@+id/highscoreTextView"
        android:layout_marginTop="54dp"
        android:textSize="40dp"
        android:layout_below="@+id/tutorialBtn"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="highscore"
        android:id="@+id/pointsTextView"
        android:layout_below="@+id/highscoreTextView"
        android:layout_centerHorizontal="true"
        android:textSize="30dp" />

    <ImageButton
        style="@style/AppTheme"
        android:id="@+id/tutorialBtn"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/tutbtnstates"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/playBtn"
        android:onClick="onClickTut" />

</RelativeLayout>
